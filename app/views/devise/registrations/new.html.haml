- title "Registrierung"

.row.user
  .large-10.large-offset-3.columns.shape.bright-grey
    %h2
      Registrierung
    = form_for(resource, :as => resource_name, :class => "custom", :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .large-12.columns
          E-Mail
          = f.email_field :email
      .row
        .large-12.columns
          Benutzername (mindestens 6 Zeichen)
          = f.text_field :username
      .row
        .large-12.columns
          Passwort (mindestens 8 Zeichen)
          = f.password_field :password
      .row
        .large-12.columns
          Passwort bestÃ¤tigen
          = f.password_field :password_confirmation
      .row
        .large-12.columns.spacetop
          %label{:for => "checkbox"}
            = f.check_box :nutzungsbedingung, {:default => false, :id => "checkbox"}
            %span{:class => "custom checkbox"}
            %b
              Hiermit akzeptiere ich die
              %a{:href => "/spielregeln", :target => "_blank"}
                Spielregeln
      .row
        .large-8.columns
          = f.submit "Registrieren", :class => "button radius"
      .row
        .large-8.columns.spacebottom
          = render "devise/shared/links"
