      = form_tag search_path, method: :get, :class => "search-box" do
        .row.collapse
          .small-9.columns
            = text_field_tag 'q', nil, :placeholder => "Suchen"
          .small-3.columns
            %span.postfix
              %button{type: "submit", class: "button secondary"}
                .fa.fa-search.fa-lg
.row.spacebottom
  .large-10.columns.large-centered.center
    - if flash[:notice]
      .alert-box.round.success
        = flash[:notice]
    - if flash[:alert]
      .alert-box.round
        = flash[:alert]
    - if flash[:error]
      .alert-box.alert.round
        = flash[:error]