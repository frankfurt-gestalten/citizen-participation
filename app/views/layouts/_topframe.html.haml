              = link_to current_user.username, profile_path(current_user)
              %a.tiny.button.radius.dropdown{"data-dropdown"=>"drop1", :style => "margin-left: 20px;"}
                Funktionen

              %ul#drop1.f-dropdown{"data-dropdown-content" => ""}
