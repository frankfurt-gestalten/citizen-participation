%p{:class => "user-#{user.id}"}
  - if can? :remove_moderator, User
    = link_to remove_moderator_profile_path(user), method: :post,remote: true, class: 'tiny button', :style => "color: #ffffff; margin-top: 18px" do
      -#.fa.fa-times-circle{:style => "color: #ffffff" }
      RM Moderator
  - else
    - if can? :assign_moderator, User
      = link_to assign_moderator_profile_path(user), method: :post, remote: true, class: 'tiny button', :style => "color: #ffffff; margin-top: 18px"  do
        Make Moderator
